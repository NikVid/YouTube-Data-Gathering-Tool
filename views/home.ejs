<%- include("partials/header") %>
<h1 class="d-flex justify-content-center py-4">YouTube datamine</h1>
<div class="container">

                    <div class="row  d-flex justify-content-center ">

                      <div class="col-md-8">

                        <div class="search">
                          <form class="form-group" action="/" method="post">


                          <i class="fa fa-search"></i>
                          <input type="text" name ="searchQuery" class="form-control " placeholder="Have a question? Ask Now">
                          <label for="results">Results per page</label>
                          <select name="results" >
                            <option value="5">5</option>
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                          </select>
                          <label for="maximum_results">Maximum results</label>
                          <select name="maximum_results" >
                            <option value="50">50</option>
                            <option value="100">100</option>
                            <option value="250">250</option>
                            <option value="500">500</option>
                          </select>
                          <button name ="searchButton" class="btn btn-primary">Search</button>
                          </form>
                        </div>

                      </div>

                    </div>
                </div>

<%- include("partials/footer") %>
